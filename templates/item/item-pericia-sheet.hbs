<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Nome da Perícia"/></h1>
    </div>
  </header>
  <section class="sheet-body">
    <div class="form-group">
      <label>Atributo Base</label>
      <select name="system.attribute">
        {{#select system.attribute}}
          <option value="fr">Força (FR)</option>
          <option value="con">Constituição (CON)</option>
          <option value="dex">Destreza (DEX)</option>
          <option value="agi">Agilidade (AGI)</option>
          <option value="int">Inteligência (INT)</option>
          <option value="will">F. de Vontade (WILL)</option>
          <option value="per">Percepção (PER)</option>
          <option value="car">Carisma (CAR)</option>
          <option value="none">Nenhum (0)</option>
        {{/select}}
      </select>
    </div>
    <div class="form-group">
      <label>Pontos Gastos</label>
      <input type="text" name="system.gasto" value="{{system.gasto}}" data-dtype="Number"/>
    </div>

    {{!-- NOVO INTERRUPTOR --}}
    <div class="form-group-checkbox">
      <label>Custo Dobrado (2 para 1)</label>
      <input type="checkbox" name="system.custoDobrado" {{checked system.custoDobrado}}/>
      <p class="notes">Ative para perícias de ataque à distância. Cada 2 pontos gastos valerão 1% no total.</p>
    </div>

    <hr/>
    <div class="form-group">
      <h3>Total da Perícia: {{system.total}}%</h3>
    </div>
  </section>
</form>