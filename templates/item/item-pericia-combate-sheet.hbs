<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img
      class="profile-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="charname"><input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="Nome da Perícia de Combate"
        /></h1>
    </div>
  </header>
  <section class="sheet-body">
    <div class="form-group">
      <label>Atributo Base</label>
      <select name="system.attribute">
        {{#select system.attribute}}
          <option value="dex">Destreza (DEX)</option>
          <option value="agi">Agilidade (AGI)</option>
          <option value="fr">Força (FR)</option>
          <option value="none">Nenhum (0)</option>
        {{/select}}
      </select>
    </div>
    <div class="form-group">
      <label>Arma Vinculada (Nome Exato do Item)</label>
      <input
        type="text"
        name="system.armaVinculada"
        value="{{system.armaVinculada}}"
      />
    </div>
    <hr />
    <div class="form-group">
      <label>Pontos Gastos (Ataque)</label>
      <input
        type="text"
        name="system.gasto_atk"
        value="{{system.gasto_atk}}"
        data-dtype="Number"
      />
    </div>
    <div class="form-group">
      <label>Pontos Gastos (Defesa)</label>
      <input
        type="text"
        name="system.gasto_def"
        value="{{system.gasto_def}}"
        data-dtype="Number"
      />
    </div>
    <hr />
    <div class="form-group totals">
      <h3>Ataque Total: {{system.total_atk}}%</h3>
      <h3>Defesa Total: {{system.total_def}}%</h3>
    </div>
  </section>
</form>